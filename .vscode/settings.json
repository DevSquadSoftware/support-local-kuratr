// Place your settings in this file to overwrite default and user settings.
{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "html.format.endWithNewline": true,
  "eslint.validate": ["javascript", "html"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": false
  },
  "emmet.triggerExpansionOnTab": true,
  "prettier.printWidth": 260,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "search.exclude": {
    "**/.vscode": true,
    "**/allure-results": true,
    "**/aurelia_project": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/scripts": true
  },
  "files.autoSave": "off",
  "files.watcherExclude": {
    "**/.rpt2_cache/**": true,
    "**/allure-results/**": true,
    "**/coverage/**": true,
    "**/node_modules/*/**": true
  },
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.importModuleSpecifier": "relative",
  "cSpell.words": [
    "Constructable",
    "Injectable",
    "Renderable",
    "Unbindable",
    "attachables",
    "bindables",
    "containerless",
    "renderables",
    "requestor's"
  ],
  "workbench.colorCustomizations": {
    "activityBar.background": "#ffffff",
    "activityBar.foreground": "#ff0000",
    "activityBar.inactiveForeground": "#33ff0099",
    "activityBarBadge.background": "#ab7354",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#000000",
    "titleBar.inactiveBackground": "#3f2e5e99",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#3f2e5e",
    "statusBarItem.hoverBackground": "#563f80",
    "statusBar.foreground": "#e7e7e7"
  },
  "workbench.tree.indent": 16,
  "git.pullTags": false
}
